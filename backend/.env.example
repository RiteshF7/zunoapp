# ── Supabase ──────────────────────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# ── Vertex AI (Google Cloud) ─────────────────────────────────────────────
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GCP_CREDENTIALS_JSON=path/to/service-account.json
VERTEX_EMBEDDING_MODEL=text-embedding-005
VERTEX_LLM_MODEL=gemini-2.0-flash-001

# ── RAG Settings ─────────────────────────────────────────────────────────
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=8

# ── Server ────────────────────────────────────────────────────────────────
BACKEND_PORT=8000

# Environment: development | staging | production
# Production disables /docs and /redoc and tightens CORS.
ENVIRONMENT=development

# Comma-separated allowed origins for CORS. Required in production.
# Development: localhost origins. Production: e.g. https://www.zuno.com,https://zuno.com
CORS_ORIGINS=http://localhost:8081,http://localhost:19006,http://localhost:5173
