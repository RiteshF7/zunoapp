{
  "manifest_version": 3,
  "name": "Share to Zuno",
  "description": "Right-click any page or click the icon to share it to your Zuno library",
  "version": "1.1.0",
  "permissions": ["contextMenus", "activeTab", "storage", "notifications", "scripting", "tabs"],
  "host_permissions": [
    "https://zunoapp.onrender.com/*",
    "http://localhost:*/app/*",
    "http://localhost:*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Share to Zuno"
  },
  "content_scripts": [
    {
      "matches": [
        "https://zunoapp.onrender.com/app/*",
        "http://localhost:*/app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
